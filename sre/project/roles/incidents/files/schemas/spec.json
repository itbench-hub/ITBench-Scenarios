{
    "type": "object",
    "required": ["metadata", "spec"],
    "properties": {
        "metadata": {
            "type": "object",
            "required": ["complexity", "id", "name", "platform"],
            "properties": {
                "complexity": {
                    "type": "string",
                    "enum": ["Low", "Medium", "High"]
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "platform": {
                    "type": "string",
                    "enum": ["kubernetes"]
                }
            }
        },
        "spec": {
            "type": "object",
            "required": ["environment", "faults"],
            "properties": {
                "environment": {
                    "type": "object",
                    "required": ["applications", "tools"],
                    "properties": {
                        "applications": {
                            "type": "object",
                            "properties": {
                                "otel_demo": {
                                    "type": "object",
                                    "required": ["enabled"],
                                    "properties": {
                                        "configuration": {
                                            "type": "object"
                                        },
                                        "enabled": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        },
                        "tools": {
                            "type": "object",
                            "properties": {
                                "category": {
                                    "type": "string",
                                    "enum": ["finops", "sre"]
                                },
                                "selected": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "faults": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "chaos_mesh": {
                                    "type": "object",
                                    "required": ["schedule"],
                                    "properties": {
                                        "schedule": {
                                            "type": "object",
                                            "required": ["name", "spec"],
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "spec": {
                                                    "type": "object"
                                                }
                                            }
                                        }
                                    }
                                },
                                "custom": {
                                    "type": "object",
                                    "required": ["name"],
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "enum": ["invalid-command", "invalid-image", "invalid-node-selector", "misconfigured-horizontal-pod-autoscaler", "misconfigured-network-policy", "misconfigured-persitent-volume-claim", "misconfigured-resource-quota", "misconfigured-service-port", "modify-environment-variables", "unsupported-image"]
                                        },
                                        "invalid_command": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["container", "kind", "name", "namespace"],
                                                    "properties": {
                                                        "container": {
                                                            "type": "object",
                                                            "required": ["name"],
                                                            "properties": {
                                                                "name": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        },
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "ReplicaSet", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "restart_policy": {
                                                    "type": "string",
                                                    "enum": ["force", "safe"]
                                                }
                                            }
                                        },
                                        "invalid_image": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["container", "kind", "name", "namespace"],
                                                    "properties": {
                                                        "container": {
                                                            "type": "object",
                                                            "required": ["name"],
                                                            "properties": {
                                                                "name": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        },
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "restart_policy": {
                                                    "type": "string",
                                                    "enum": ["force", "safe"]
                                                }
                                            }
                                        },
                                        "invalid_node_selector": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["kind", "name", "namespace"],
                                                    "properties": {
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "misconfigured_horizontal_pod_autoscaler": {
                                            "type": "object",
                                            "required": ["autoscaler"],
                                            "properties": {
                                                "type": "object",
                                                "required": ["name", "namespace"],
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "namespace": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "misconfigured_network_policy": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["kind", "name", "namespace"],
                                                    "properties": {
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "misconfigured_persitent_volume_claim": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["container", "kind", "name", "namespace"],
                                                    "properties": {
                                                        "container": {
                                                            "type": "object",
                                                            "required": ["name"],
                                                            "properties": {
                                                                "name": {
                                                                    "type": "string"
