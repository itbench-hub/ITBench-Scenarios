                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "misconfigured_resource_quota": {
                                            "type": "object",
                                            "required": ["namespace", "workloads"],
                                            "properties": {
                                                "namespace": {
                                                    "type": "object",
                                                    "required": ["name"],
                                                    "properties": {
                                                        "name": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "workloads": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "items": {
                                                        "type": "object",
                                                        "required": ["kind", "name"],
                                                        "properties": {
                                                            "kind": {
                                                                "type": "string",
                                                                "enum": ["Deployment", "StatefulSet"]
                                                            },
                                                            "name": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "misconfigured_service_port": {
                                            "type": "object",
                                            "required": ["service"],
                                            "properties": {
                                                "service": {
                                                    "type": "object",
                                                    "required": ["name", "namespace", "target_port"],
                                                    "properties": {
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        },
                                                        "target_port": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            }
                                        },
                                        "modify_environment_variables": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["container", "kind", "name", "namespace"],
                                                    "properties": {
                                                        "container": {
                                                            "type": "object",
                                                            "required": ["env", "name"],
                                                            "properties": {
                                                                "env": {
                                                                    "type": "array",
                                                                    "minItems": 1,
                                                                    "items": {
                                                                        "type": "object",
                                                                        "required": ["name", "value"],
                                                                        "properties": {
                                                                            "name": {
                                                                                "type": "string"
                                                                            },
                                                                            "value": {
                                                                                "type": "string"
                                                                            }
                                                                        }
                                                                    }
                                                                },
                                                                "name": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        },
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "restart_policy": {
                                                    "type": "string",
                                                    "enum": ["force", "safe"]
                                                }
                                            }
                                        },
                                        "unsupported_image": {
                                            "type": "object",
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["container", "kind", "name", "namespace"],
                                                    "properties": {
                                                        "container": {
                                                            "type": "object",
                                                            "required": ["name"],
                                                            "properties": {
                                                                "name": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        },
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "restart_policy": {
                                                    "type": "string",
                                                    "enum": ["force", "safe"]
                                                }
                                            }
                                        }
                                    }
                                },
                                "otel_demo": {
                                    "type": "object",
                                    "required": ["flagd"],
                                    "properties": {
                                        "flagd": {
                                            "type": "object",
                                            "required": ["flags"],
                                            "properties": {
                                                "flags": {
                                                    "type": "array",
                                                    "minItems": 1,
                                                    "items": {
                                                        "type": "object",
                                                        "required": ["name", "state"],
                                                        "properties": {
                                                            "name": {
                                                                "type": "string",
                                                                "enum": ["adHighCpu", "adFailure", "adManualGc", "cartFailure", "imageSlowLoad", "kafkaQueueProblems", "loadGeneratorFloodHomepage", "paymentFailure", "paymentUnreachable", "productCatalogFailure", "recommendationCacheFailure"]
                                                            },
                                                            "state": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "valkey": {
                                    "type": "object",
                                    "required": ["name"],
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "enum": ["invalid-password"]
                                        },
                                        "invalid_password": {
                                            "required": ["workload"],
                                            "properties": {
                                                "workload": {
                                                    "type": "object",
                                                    "required": ["kind", "name", "namespace"],
                                                    "properties": {
                                                        "kind": {
                                                            "type": "string",
                                                            "enum": ["Deployment", "StatefulSet"]
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "namespace": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "wait": {
                                    "type": "object",
                                    "required": ["name"],
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "enum": ["pause"]
                                        },
                                        "pause": {
                                            "type": "object",
                                            "required": ["seconds"],
                                            "properties": {
                                                "seconds": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
