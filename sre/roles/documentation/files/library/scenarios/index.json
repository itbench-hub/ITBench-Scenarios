                                "state": "on"
                            },
                            "kubernetesObject": {
                                "apiVersion": "v1",
                                "kind": "ConfigMap",
                                "metadata": {
                                    "name": "flagd-config",
                                    "namespace": "otel-demo"
                                }
                            }
                        },
                        "id": "opentelemetry-demo-feature-flag"
                    }
                ]
            }
        ],
        "id": 3,
        "platforms": [
            "Kubernetes"
        ],
        "solutions": [
            [
                {
                    "command": "`kubectl -n otel-demo edit configmap flagd-config",
